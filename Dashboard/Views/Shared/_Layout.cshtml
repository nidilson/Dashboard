<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.title</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div id="menu" class="menu active">
                <div class="hamburger-menu-line"></div>
                <div class="hamburger-menu-line"></div>
                <div class="hamburger-menu-line"></div>
            </div>
            <div class="user-container">
                <i class="bi bi-person-fill user-icon"></i>
                <span>Usuario</span>
            </div>
        </nav>
    </header>
    <div id="container" class="container">
        <aside id="sidebar" class="sidebar">
            <nav class="sidenav">
                <ul>
                    <li>
                        <a href="/Home/Index" class="menu-option @(ViewBag.MenuIndexSelected == 1 ? "selected" : "")">
						    <i class="bi bi-graph-up"></i>
                            <span>Dashboard</span>
                        </a>                    
                    </li>
                    <li>
                        <a href="/Home/Tables" class="menu-option @(ViewBag.MenuIndexSelected == 2 ? "selected" : "")">
                            <i class="bi bi-table"></i>
                            <span>Tablas</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Cards" class="menu-option @(ViewBag.MenuIndexSelected == 3 ? "selected" : "")">
                            <i class="bi bi-card-text"></i>
                            <span>Cards</span>
                        </a>
                    </li>
                    
                </ul>
            </nav>
        </aside>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
